<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="48dp" android:background="@color/title_background" android:id="@+id/common_head">

    <RelativeLayout
        android:id="@+id/common_head_lef_message"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/message_all_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:src="@drawable/message_all"
            />
        <ImageView
            android:id="@+id/message_new"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignRight="@id/message_all_icon"
            android:layout_alignTop="@id/message_all_icon"
            android:src="@drawable/red_dot"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/common_head_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">

        <Button
            android:id="@+id/common_head_left_button"
            android:layout_width="10dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:background="@drawable/common_left_image_wealth"
            android:clickable="false"
            android:textColor="@color/white"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/common_head_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:text="TITLE"
        android:textSize="18dp"
        android:textColor="#222222"/>
    <TextView
        android:id="@+id/common_head_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:textColor="@color/text_color_2"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:ellipsize="marquee"/>
    <view
        android:id="@+id/common_head_line"
        style="@style/split_lined9"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>